          <Payload>
            
            <WmPayload Name="Format             " Length="1" />
            <WmPayload Name="DestGroupAdr       " Length="1" />
            <WmPayload Name="DestDeviceAdr      " Length="2" />
            <WmPayload Name="SrcGroupAdr        " Length="1" />
            <WmPayload Name="SrcDeviceAdr       " Length="2" />
